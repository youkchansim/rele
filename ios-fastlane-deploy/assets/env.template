# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# App Store Connect API Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
#
# 1. App Store Connect에서 API 키 생성:
#    https://appstoreconnect.apple.com/access/api
#
# 2. 아래 값들을 채워넣으세요:
#    - KEY_ID: 키 ID (예: ABC123DEF4)
#    - ISSUER_ID: 발급자 ID (예: 12345678-1234-1234-1234-123456789012)
#    - KEY_FILE: .p8 파일 경로 (상대 경로 또는 절대 경로)
#
# 3. .env 파일은 절대 Git에 커밋하지 마세요!
#    .gitignore에 추가되어 있는지 확인하세요.
#
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# App Store Connect API Key
APP_STORE_KEY_ID=YOUR_KEY_ID_HERE
APP_STORE_ISSUER_ID=YOUR_ISSUER_ID_HERE
APP_STORE_KEY_FILE=./fastlane/AuthKey_XXXXXX.p8

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Optional: Team & App Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Apple Developer Team ID (optional - usually auto-detected)
# APPLE_TEAM_ID=XXXXXXXXXX

# Apple ID for App Store Connect (optional - for password-based auth)
# APPLE_ID=your@email.com

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Optional: Slack Notifications
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Slack Webhook URL for deployment notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXX/YYY/ZZZ

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Multi-App Configuration (if managing multiple apps)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
